<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backGround">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Change Password"
        android:textColor="?attr/primaryText"
        android:textSize="24sp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Password"
            android:textColor="?attr/primaryText"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/current_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:background="@drawable/bottom_border_accessory_black"
            android:textColor="@color/lightOrange"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textSize="14sp"
            android:layout_marginTop="30dp"
            android:textColor="?attr/primaryText"/>

        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:background="@drawable/bottom_border_accessory_black"
            android:textColor="@color/lightOrange"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm New Password"
            android:layout_marginTop="30dp"
            android:textColor="?attr/primaryText"/>

        <EditText
            android:id="@+id/new_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:background="@drawable/bottom_border_accessory_black"
            android:textColor="@color/lightOrange" />

    </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <Button
                android:id="@+id/save_password_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_accessory_blue"
                android:text="Save Changes"
                android:textAllCaps="false"
                android:layout_above="@id/cancel_pasw_change_btn"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/cancel_pasw_change_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_accessory_orange"
                android:text="Cancel"
                android:layout_alignParentBottom="true"
                android:textAllCaps="false"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textColor="@color/white"/>

        </RelativeLayout>

</LinearLayout>